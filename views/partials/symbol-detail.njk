{%- from 'heading.njk' import heading -%}

{#-
  We omit the badges for classes, modules, and namespaces, because they would duplicate the badges
  for the page's main heading.
-#}
{%- if item.kind and not item.kind | includes(['class', 'module', 'namespace']) -%}
  {%- include 'symbol-badges.njk' -%}
{%- endif -%}

{%- if not item.hideconstructor %}
  {%- set itemId = idForDoclet(item) -%}
  {%- set headingText -%}
    {%- include 'constructor-prefix.njk' -%}
    <span class="symbol-name">{{ item.name }}</span>
    {%- include 'signature.njk' -%}
  {%- endset -%}
  {{ heading(id=itemId, text=headingText) }}
{% endif -%}

{%- if not config('sourceFiles.singleLink') and not item.hideconstructor %}
  {%- include 'source-file.njk' -%}
{% endif -%}

{%- if not item.hideconstructor %}
  {%- include 'description.njk' -%}
  {%- include 'examples.njk' -%}
  {%- include 'params.njk' -%}

  {%- if item.kind === 'enum' -%}
    {%- set enumMembers = getDescendants(item) -%}
    {%- if enumMembers | length -%}
      {%- set originalItem = item -%}
      {%- set item = { properties: enumMembers } -%}
      {%- include 'properties.njk' -%}
      {%- set item = originalItem -%}
    {%- endif -%}
  {%- else -%}
    {%- include 'properties.njk' -%}
  {%- endif -%}

  {%- set details -%}{%- include 'details.njk' -%}{%- endset -%}
  {%- set details = details | trim -%}
  {%- if details -%}
    <dl class="dl-compact">
      {{ details | safe }}
    </dl>
  {%- endif -%}
{%- endif -%}
