<!DOCTYPE html>
<html lang="{{ config('lang') }}">
  {%- block head %}
    <head>
      {%- block meta %}
        <meta name="generator" content="JSDoc {{ jsdocVersion() }}">
        <meta charset="{{ config('encoding') }}">
        {#- TODO: anything else to include by default? Maybe viewport scale? -#}
      {%- endblock -%}

      {%- block title %}
        <title>{{ translatePageTitle(pageTitlePrefix, pageTitle, pageCategory) }}</title>
      {% endblock -%}
      {%- block css %}
        {#- Docs: https://developers.google.com/fonts/docs/css2#api_url_specification -#}
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;600&family=Karla:ital,wght@0,400;0,700;1,400;1,700&family=Inter:ital,wght@0,400;0,600;1,400;1,600&display=swap">
        {#- TODO: use relative path to CSS files -#}
        <link rel="stylesheet" href="css/baseline.css">
      {% endblock -%}
    </head>
  {% endblock -%}
  {%- block body %}
    <body>
      {%- block body_content %}
        {%- block body_navbar %}
          {%- include 'navbar.njk' -%}
        {% endblock -%}

        {%- block body_main %}
          <main class="jsdoc-main">
            {%- block body_toc_navbar %}
              <nav class="jsdoc-toc-nav">
                <div class="jsdoc-toc-nav-content">
                  {%- include 'toc.njk' -%}
                </div>
              </nav>
            {% endblock -%}

            <div class="jsdoc-content">
              {%- block body_main_content %}
                {#- Override this block to add content. -#}
              {% endblock -%}
            </div>
          {% endblock -%}
          </main>
        {% endblock -%}

      {%- block body_footer %}
        {%- if config('components.footer') %}
          <footer class="jsdoc-footer">
            {%- block body_footer_content %}
              <p>
                {{ generatedBy() }}
              </p>
            {% endblock -%}
          </footer>
        {% endif -%}
      {% endblock -%}

      {%- block body_scripts %}
        {#- TODO: fix up path relative to current output directory -#}
        <script src="scripts/scrollanchor.js"></script>
        <script src="scripts/shoelace.js"></script>
      {% endblock -%}
    </body>
  {% endblock -%}
</html>
