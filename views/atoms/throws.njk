{% if item.exceptions and item.exceptions.length %}
  <dt>{{ 'headings.throws' | translate(item.exceptions) }}</dt>
  {% for exception in item.exceptions %}
    <dd>
      {%- filter markdown -%}
        {%- if exception.type and exception.type.parsedType -%}
          <code>{{ exception.type.parsedType | describeType }}</code>&nbsp;
        {%- endif -%}
        {{- exception.description | resolveLinks -}}
      {%- endfilter -%}
    </dd>
  {% endfor %}
{% endif %}
